<?xml version="1.0" encoding="utf-8"?>
<epi desc="测试接口"
     xmlns="http://www.w3school.com.cn"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="/epi.xsd">
    <!--所有功能集合-->
    <aa>
        <if test="">

        </if>
    </aa>
    <test title="title" desc="desc" cache="1000">
        <param key="param" default="100"/>
        select 'test',
        <if test="param&gt;10">
            'gt 10' param_status
        </if>
    </test>
    <bool>
        <param key="bool" default="false"/>
        select :bool b
    </bool>
    <hello-world title="基础使用">
        select 'hello world' key
    </hello-world>
    <cache cache="5000" title="使用缓存(cache单位毫秒)">
        select 'cache' cache,now() now;
    </cache>
    <param title="参数获取与处理">
        <param key="param1" default="p1" title="参数1"/>
        <param key="param2" default="p2" title="参数2"/>
        <param key="param3"/>
        select :param1 param1,:param2 param2,:param3 param3,
    </param>
    <condition title="条件处理" desc="传递param参数判断与10的关系">
        <param key="param" default="100"/>
        select
        <if test="param&gt;10">
            'gt 10' param_status
        </if>
        <if test="param&lt;10">
            'lt 10' param_status
        </if>
        <if test="param==10">
            'eq 10' param_status
        </if>
        <if>
            ,:param param
        </if>
    </condition>
    <insert title="插入数据">
        <param key="content" title="内容" default="23333"/>
        insert into demo(content) values (:content)
    </insert>
</epi>